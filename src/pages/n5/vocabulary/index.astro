---
import Layout from '../../../layouts/Layout.astro';
import VocabCard from '../../../components/cards/VocabCard.astro';
import SmartLink from '../../../components/SmartLink.astro';
import { getCollection } from 'astro:content';

const allVocab = await getCollection('vocabulary');
const n5Vocab = allVocab.filter(v => v.data.level === 'n5').sort((a, b) => (a.data.jlpt_order || 0) - (b.data.jlpt_order || 0));
---

<Layout title="JLPT N5 Vocabulary - Basic Words">
  <section class="bg-blue-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center gap-3">
        <SmartLink href="/n5" class="text-blue-600 hover:text-blue-800">N5</SmartLink>
        <span class="text-gray-400">/</span>
        <span class="text-gray-700 font-semibold">Vocabulary</span>
      </div>
      <h1 class="text-3xl font-bold mt-4 text-gray-900">N5 Vocabulary</h1>
      <p class="text-gray-600 mt-2">Basic vocabulary for beginners (~800 words)</p>
    </div>
  </section>

  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-8 bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-bold mb-4">Study Tips for N5 Vocabulary</h2>
        <ul class="space-y-2 text-gray-700">
          <li>• Start with high-frequency words (greetings, numbers, family)</li>
          <li>• Learn words in context with example sentences</li>
          <li>• Focus on everyday vocabulary (food, school, daily items)</li>
          <li>• Use spaced repetition (Anki) for efficient memorization</li>
          <li>• Practice with native audio when possible</li>
        </ul>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {n5Vocab.map((vocab) => (
          <VocabCard
            title={vocab.data.title}
            reading={vocab.data.reading}
            meaning={vocab.data.meaning}
            exampleSentence={vocab.data.example_sentence}
            exampleReading={vocab.data.example_reading}
            exampleMeaning={vocab.data.example_meaning}
            jlptOrder={vocab.data.jlpt_order}
          />
        ))}
      </div>

      {n5Vocab.length === 0 && (
        <div class="text-center py-12">
          <p class="text-gray-500 text-lg mb-6">No vocabulary items added yet. Content coming soon!</p>
          <SmartLink href="/tips" class="inline-block bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition-colors">
            View Study Tips
          </SmartLink>
        </div>
      )}
    </div>
  </section>
</Layout>
