---
import Layout from '../../../layouts/Layout.astro';
import KanjiCard from '../../../components/cards/KanjiCard.astro';
import { getCollection } from 'astro:content';

const allKanji = await getCollection('kanji');
const n4Kanji = allKanji.filter(k => k.data.level === 'n4').sort((a, b) => (a.data.jlpt_order || 0) - (b.data.jlpt_order || 0));
---

<Layout title="JLPT N4 Kanji - Complete Character List">
  <section class="bg-red-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center gap-3">
        <a href="/n4" class="text-red-600 hover:text-red-800">N4</a>
        <span class="text-gray-400">/</span>
        <span class="text-gray-700 font-semibold">Kanji</span>
      </div>
      <h1 class="text-3xl font-bold mt-4 text-gray-900">N4 Kanji</h1>
      <p class="text-gray-600 mt-2">Complete kanji list for JLPT N4 level</p>
    </div>
  </section>

  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-8 bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-bold mb-4">Study Tips for Kanji</h2>
        <ul class="space-y-2 text-gray-700">
          <li>• Learn kanji with their readings and example words</li>
          <li>• Focus on the most common kanji first</li>
          <li>• Practice writing kanji to memorize stroke order</li>
          <li>• Learn kanji in context with vocabulary</li>
          <li>• Review regularly using flashcards</li>
        </ul>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {n4Kanji.map((kanji) => (
          <KanjiCard
            title={kanji.data.title}
            onyomi={kanji.data.onyomi}
            kunyomi={kanji.data.kunyomi}
            meaning={kanji.data.meaning}
            strokeCount={kanji.data.stroke_count}
            compounds={kanji.data.compounds}
            jlptOrder={kanji.data.jlpt_order}
          />
        ))}
      </div>

      {n4Kanji.length === 0 && (
        <div class="text-center py-12">
          <p class="text-gray-500 text-lg">No kanji items added yet. Content coming soon!</p>
          <a href="/resources" class="inline-block mt-4 bg-red-500 text-white px-6 py-2 rounded-lg hover:bg-red-600 transition-colors">
            View Resources
          </a>
        </div>
      )}
    </div>
  </section>
</Layout>
