---
import Layout from '../../../layouts/Layout.astro';
import VocabCard from '../../../components/cards/VocabCard.astro';
import { getCollection } from 'astro:content';

const allVocab = await getCollection('vocabulary');
const n4Vocab = allVocab.filter(v => v.data.level === 'n4').sort((a, b) => (a.data.jlpt_order || 0) - (b.data.jlpt_order || 0));
---

<Layout title="JLPT N4 Vocabulary - Complete Word List">
  <section class="bg-blue-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center gap-3">
        <a href="/n4" class="text-blue-600 hover:text-blue-800">N4</a>
        <span class="text-gray-400">/</span>
        <span class="text-gray-700 font-semibold">Vocabulary</span>
      </div>
      <h1 class="text-3xl font-bold mt-4 text-gray-900">N4 Vocabulary</h1>
      <p class="text-gray-600 mt-2">Complete vocabulary list for JLPT N4 level</p>
    </div>
  </section>

  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-8 bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-bold mb-4">Study Tips for Vocabulary</h2>
        <ul class="space-y-2 text-gray-700">
          <li>• Learn words in context, not in isolation</li>
          <li>• Use spaced repetition (Anki) for efficient memorization</li>
          <li>• Practice with example sentences</li>
          <li>• Focus on words that appear in reading materials</li>
          <li>• Review regularly to maintain retention</li>
        </ul>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {n4Vocab.map((vocab) => (
          <VocabCard
            title={vocab.data.title}
            reading={vocab.data.reading}
            meaning={vocab.data.meaning}
            exampleSentence={vocab.data.example_sentence}
            exampleReading={vocab.data.example_reading}
            exampleMeaning={vocab.data.example_meaning}
            jlptOrder={vocab.data.jlpt_order}
          />
        ))}
      </div>

      {n4Vocab.length === 0 && (
        <div class="text-center py-12">
          <p class="text-gray-500 text-lg">No vocabulary items added yet. Content coming soon!</p>
          <a href="/resources" class="inline-block mt-4 bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition-colors">
            View Resources
          </a>
        </div>
      )}
    </div>
  </section>
</Layout>
