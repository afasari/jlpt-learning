---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const cheatsheets = await getCollection('cheatsheets');
const cheatsheetsByLevel = cheatsheets.reduce((acc, sheet) => {
  if (!acc[sheet.data.level]) acc[sheet.data.level] = [];
  acc[sheet.data.level].push(sheet);
  return acc;
}, {} as Record<string, typeof cheatsheets>);
