---
const navItems = [
  { label: 'Roadmap', href: '/roadmap' },
  { label: 'Resources', href: '/resources' },
  { label: 'Cheatsheets', href: '/cheatsheets' },
  { label: 'Tips', href: '/tips' },
];
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <a href="/" class="flex items-center gap-2">
        <span class="text-2xl font-bold bg-gradient-to-r from-red-500 to-blue-500 bg-clip-text text-transparent">
          JLPT
        </span>
        <span class="text-gray-600 font-medium">Hub</span>
      </a>

      <nav class="hidden md:flex gap-6">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="text-gray-600 hover:text-gray-900 font-medium transition-colors"
          >
            {item.label}
          </a>
        ))}
      </nav>

      <div class="flex gap-2">
        {['N5', 'N4', 'N3', 'N2', 'N1'].map((level) => (
          <a
            href={`/${level.toLowerCase()}`}
            class={`px-2 py-1 text-xs font-bold rounded ${
              level === 'N5' ? 'bg-green-100 text-green-800' :
              level === 'N4' ? 'bg-yellow-100 text-yellow-800' :
              level === 'N3' ? 'bg-orange-100 text-orange-800' :
              level === 'N2' ? 'bg-red-100 text-red-800' :
              'bg-purple-100 text-purple-800'
            }`}
          >
            {level}
          </a>
        ))}
      </div>
    </div>
  </div>
</header>
