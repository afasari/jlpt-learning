---
interface Props {
  title: string;
  category?: string;
  difficulty?: string;
}

const { title, category, difficulty } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md p-6 border border-gray-100 hover:shadow-lg transition-shadow">
  <div class="flex items-start justify-between mb-4">
    <h3 class="text-xl font-bold text-green-600">{title}</h3>
    <div class="flex gap-2">
      {category && <span class="text-xs bg-green-100 text-green-800 px-2 py-1 rounded">{category}</span>}
      {difficulty && (
        <span class={`text-xs px-2 py-1 rounded ${
          difficulty === 'beginner' ? 'bg-blue-100 text-blue-800' :
          difficulty === 'intermediate' ? 'bg-yellow-100 text-yellow-800' :
          'bg-red-100 text-red-800'
        }`}>
          {difficulty}
        </span>
      )}
    </div>
  </div>

  <div class="prose prose-green max-w-none">
    <slot />
  </div>
</div>
