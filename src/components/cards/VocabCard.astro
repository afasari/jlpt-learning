---
interface Props {
  title: string;
  reading: string;
  meaning: string;
  exampleSentence?: string;
  exampleReading?: string;
  exampleMeaning?: string;
  jlptOrder?: number;
}

const { title, reading, meaning, exampleSentence, exampleReading, exampleMeaning, jlptOrder } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md p-4 border border-gray-100 hover:shadow-lg transition-shadow">
  <div class="flex items-start justify-between mb-2">
    <h3 class="text-2xl font-bold text-gray-900">{title}</h3>
    {jlptOrder && <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded">#{jlptOrder}</span>}
  </div>

  <div class="text-lg text-blue-600 font-medium mb-2">【{reading}】</div>
  <div class="text-gray-700 mb-4">{meaning}</div>

  {exampleSentence && (
    <div class="bg-gray-50 rounded p-3 border-l-4 border-blue-500">
      <p class="text-gray-800 mb-1">{exampleSentence}</p>
      {exampleReading && <p class="text-gray-600 text-sm mb-1">{exampleReading}</p>}
      {exampleMeaning && <p class="text-gray-500 text-sm">{exampleMeaning}</p>}
    </div>
  )}
</div>
