---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = 'JLPT Learning Hub' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Comprehensive JLPT learning resource covering all levels from N5 to N1. Vocabulary, Kanji, Grammar, Resources, and Study Tips." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 text-gray-900">
    <slot />
  </body>
</html>
